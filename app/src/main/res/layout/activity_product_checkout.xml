<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductCheckoutActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cardHolder_input"
        android:layout_width="324dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Portador" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cardNumber_input"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardHolder_input">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/cardNumber_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número do Cartão" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/expirationDate_input"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardNumber_input">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/expirationDate_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de Expiração" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/securityNumber_input"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expirationDate_input">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/securityNumber_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Código de Segurança" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/confirm_order_button"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="80dp"
        android:background="@color/colorPrimary"
        android:text="Finalizar Compra"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/securityNumber_input" />
</android.support.constraint.ConstraintLayout>